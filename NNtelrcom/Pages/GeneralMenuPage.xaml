<Page x:Class="NNtelrcom.Pages.GeneralMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NNtelrcom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"

      Title="GeneralMenuPage">

    <Grid>
        <StackPanel Orientation="Vertical" >
        <Button Name="General1" HorizontalAlignment="Center" Margin="0,0,0,20"  Width="300" Content="С основными параметрами" Click="General1_Click" IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"  ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" />
        <Button Name="General2" HorizontalAlignment="Center" Margin="0,0,0,20"  Width="300" Content="Со всеми параметрами" Click="General2_Click" IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"  ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" />
        </StackPanel>
    </Grid>
</Page>
